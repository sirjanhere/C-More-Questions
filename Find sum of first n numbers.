#include <iostream>

int main() {
    int n;
    std::cout << "Enter the value of n: ";
    std::cin >> n;

    // Calculate the sum of the first n natural numbers
    int sum = (n * (n + 1)) / 2;

    // Print the result
    std::cout << "The sum of the first " << n << " natural numbers is: " << sum << std::endl;

    return 0;
}
